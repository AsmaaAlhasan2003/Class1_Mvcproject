@model Domain.Models.Author

<h2>Author Details</h2>

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <p><strong>Country:</strong> @Model.Country</p>
        <p><strong>Gender:</strong> @(Model.Gender==Domain.Enum.Gender.Male ? "Male" : "Female")</p>
        <p><strong>BirthDay:</strong> @Model.BirthDay.ToString("yyyy-MM-dd")</p>

        <!-- عرض الكتب المرتبطة بالمؤلف -->
        <h4>Books by @Model.Name</h4>
        @if (Model.Books != null && Model.Books.Any())
        {
            <ul>
                @foreach (var book in Model.Books)
                {
                    <li>
                        <strong>Book Name:</strong> @book.Name - <strong>Published:</strong> @book.DateOfPublication.ToString("yyyy-MM-dd")
                    </li>
                }
            </ul>
        }
        else
        {
            <p>This author has no books.</p>
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-primary">Back to Authors List</a>
