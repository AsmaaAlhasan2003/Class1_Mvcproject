@model IList<Domain.Models.Author>
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<h2 class="text-center mb-5">Our Authors</h2>

<div class="row">
    @foreach (var author in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <!-- صورة المؤلف مع تحديد الامتداد -->
                <img src="/images/Authors/author@(author.AuthorId.ToString()).jpg" alt="Author Image"
                     onerror="this.onerror=null;this.src='/images/default-author.jpg';" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">@author.Name</h5>
                    <p class="card-text">@author.Country</p>
                    <a href="@Url.Action("Details", new { id = author.AuthorId })" class="btn btn-primary">More Info</a>
                </div>
            </div>
        </div>
    }
</div>

<a class="btn btn-primary mt-3" href="@Url.Action("Create")">Add New Author</a>

<!-- CSS Styling -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #FAF4EB; /* لون الخلفية البيج الفاتح */
        color: #333;
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    h2 {
        color: #4A7A9E;
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    .card {
        border: none;
        border-radius: 10px #4A7A9E;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* ظل للكارد */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        height:600px;
        margin-bottom:30px;
    }

        .card:hover {
            transform: translateY(-10px); /* تأثير الحركة عند التمرير */
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2); /* زيادة الظل */
        }

    .card-img-top {
        width: 100%;
        height: 450px;
        object-fit: cover; /* ضمان تناسق الصورة */
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-title {
        font-size: 20px;
        color: #4A7A9E;
        font-weight: bold;
    }

    .card-text {
        font-size: 14px;
        color: #666;
        margin-bottom: 8px;
    }

    .btn {
        background-color: #4A7A9E;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #3a5c7a;
        }

    /* إضافة مسافة صغيرة بين الكروت */
    .col-md-4 {
        margin-bottom: 30px;
    }
</style>
