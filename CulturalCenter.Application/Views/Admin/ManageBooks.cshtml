@model IList<Domain.Models.Book>
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Manage Books</h2>
    <a href="@Url.Action("Create", "Books")" class="btn btn-primary">Add New Book</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
           
            <th>Date of Publication</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Name</td>
                
                <td>@book.DateOfPublication.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Edit", "Books", new { id = book.Id })" class="btn btn-sm btn-warning">Edit</a>

                    <!-- نموذج للحذف -->
                    <form asp-action="Delete" asp-controller="Books" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@book.Id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
