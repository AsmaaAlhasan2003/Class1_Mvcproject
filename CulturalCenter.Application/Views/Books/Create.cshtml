@model Domain.Models.Book

@* <link rel="stylesheet" href="~/css/CreateBook.css" asp-append-version="true" />
 *@<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="container">
    <h2>Add New Book</h2>

    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Book Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

      

        <div class="form-group">
            <label asp-for="DateOfPublication" class="control-label">Date of Publication</label>
            <input asp-for="DateOfPublication" class="form-control" type="date" />
            <span asp-validation-for="DateOfPublication" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Section" class="control-label">Section</label>
            <select asp-for="Section" class="form-control">
                <option value="1">Fiction</option>
                <option value="2">Drama</option>
                <option value="3">Science</option>
                <option value="4">History</option>
                <option value="5"> Religios</option>
            </select>
            <span asp-validation-for="Section" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="control-label">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="0">Available</option>
                <option value="1">Checked Out</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AuthorId" class="control-label">Author</label>
            <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors"></select>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label for="File">Upload Book File</label>
            <input type="file" class="form-control" id="File" name="File" />
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
