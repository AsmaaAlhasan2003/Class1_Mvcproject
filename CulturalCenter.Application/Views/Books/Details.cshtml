@model Domain.Models.Book

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="container">
    <h2>Book Details</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Book Name: @Model.Name</h4>
            <p class="card-text"><strong>Date of Publication:</strong> @Model.DateOfPublication.ToString("MMMM dd, yyyy")</p>
            <p class="card-text"><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
            <p class="card-text"><strong>Section:</strong> @Model.Section.ToString()</p>
            <p class="card-text"><strong>Status:</strong> @Model.Status.ToString()</p>
            <p class="card-text"><strong>Author:</strong> @Model.Author.Name</p>

            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <p class="card-text"><strong>Download File:</strong> <a href="/Books/Download/@Model.Id" class="btn btn-success">Download</a></p>
            }
            else
            {
                <p class="text-muted">No file available for download.</p>
            }

            <div class="mt-4">
                <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
