@model Domain.Models.Exhibition

<h2>Add New Exhibition</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Books</label>
        <select asp-items="ViewBag.Books" name="selectedBooks" class="form-control" multiple="multiple">
        </select>
    </div>

    
    <div class="form-group">
        <label>Visitors</label>
        <select asp-items="ViewBag.Visitors" name="selectedVisitors" class="form-control" multiple="multiple">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Exhibition</button>
</form>
